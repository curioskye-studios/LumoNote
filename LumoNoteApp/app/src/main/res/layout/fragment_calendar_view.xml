<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black"
    android:orientation="vertical"
    android:clickable="true"

    android:id="@+id/notePreviewViewRL"

    tools:context=".ui.home.notepreview.view.NotePreviewViewFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendarTopBarCL"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/black"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"

        tools:layout_editor_absoluteX="24dp">

        <TextView
            android:id="@+id/calendarTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:fontFamily="@font/inter"
            android:text="Calendar"
            android:textColor="@color/light_grey_1"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/calendarTopBarCL"

        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ak.KalendarView
                android:id="@+id/calendarDateSelectorKV"
                android:layout_width="match_parent"
                android:layout_height="415dp"

                android:paddingTop="10dp"
                android:paddingBottom="24dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_marginTop="6dp"

                android:background="@drawable/calendar_background"

                app:calendarBackground="@color/dark_grey"

                app:monthTextStyle="@style/CalendarMonthTextStyle"
                app:weekTextStyle="@style/CalendarWeekTextStyle"
                app:dateTextStyle="@style/CalendarDateTextStyle"

                app:nextIcon="@drawable/baseline_cal_arrow_forward_24"
                app:prevIcon="@drawable/baseline_cal_arrow_back_24"

                app:todayIndicator="@drawable/gold_circle"
                app:selectedIndicator="@drawable/gold_circle_filled"
                app:eventIndicator="@drawable/gold_circle_filled"

                app:dateColor="@color/light_grey_1"
                app:nonMonthDateColor="@color/light_grey_3"
                app:todayDateColor="@color/gold"
                app:selectedDateColor="@color/black"

                app:animatingMonths="false"
                />


            <TextView
                android:id="@+id/selectedDateTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="22dp"

                android:hint="Weekday, Mon XX, XXXX"
                android:textColor="@color/gold"
                android:textColorHint="@color/gold"
                android:textSize="23dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/inter"

                android:layout_below="@id/calendarDateSelectorKV"
                />

            <TextView
                android:id="@+id/notesLabelTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:text="Notes Created"
                android:textColor="@color/light_grey_3"
                android:textSize="20dp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>


            <TextView
                android:id="@+id/noNotesMessageTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:text="No notes created on this day."
                android:textColor="@color/light_grey_2"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calendarNotesPreviewRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/selectedDateTV"/>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>




</RelativeLayout>