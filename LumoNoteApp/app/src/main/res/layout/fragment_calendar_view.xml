<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black"
    android:orientation="vertical"

    android:id="@+id/notePreviewViewRL"

    tools:context=".ui.home.notepreview.view.NotePreviewViewFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendarTopBarCL"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/black"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"

        tools:layout_editor_absoluteX="24dp">

        <TextView
            android:id="@+id/calendarTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:fontFamily="@font/inter"
            android:text="Calendar"
            android:textColor="@color/light_grey_1"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.ak.KalendarView
        android:id="@+id/calendarDateSelectorCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/calendarTopBarCL"

        app:calendarBackground="@color/black"

        app:monthTextStyle="@style/CalendarMonthTextStyle"
        app:weekTextStyle="@style/CalendarWeekTextStyle"
        app:dateTextStyle="@style/CalendarDateTextStyle"

        app:nextIcon="@drawable/baseline_cal_arrow_forward_24"
        app:prevIcon="@drawable/baseline_cal_arrow_back_24"

        app:todayIndicator="@drawable/gold_circle"
        app:selectedIndicator="@drawable/gold_fab"
        app:eventIndicator="@drawable/gold_fab"

        app:dateColor="@color/light_grey_1"
        app:nonMonthDateColor="@color/light_grey_3"
        app:todayDateColor="@color/gold"
        app:selectedDateColor="@color/black"

        app:animatingMonths="false"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendarNotesPreviewRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_below="@id/calendarDateSelectorCV"/>


</RelativeLayout>