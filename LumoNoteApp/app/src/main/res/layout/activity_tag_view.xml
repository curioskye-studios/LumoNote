<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black"
    android:orientation="vertical"
    android:clickable="true"


    tools:context=".ui.tagview.view.TagViewActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tagsTopBarCL"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/black"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"

        tools:layout_editor_absoluteX="24dp">

        <ImageView
            android:id="@+id/backButtonIV"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="11dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"

            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />

        <TextView
            android:id="@+id/tagsTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:fontFamily="@font/inter"
            android:text="Tags"
            android:textColor="@color/light_grey_1"
            android:textSize="22dp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/backButtonIV"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <ImageView
            android:id="@+id/addButtonIV"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="11dp"
            android:paddingTop="12dp"
            android:paddingEnd="11dp"
            android:paddingBottom="12dp"

            android:src="@drawable/baseline_add_24"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gold" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/noTagsMessageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"

        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:lineSpacingMultiplier="1.2"
        android:layout_below="@id/tagsTopBarCL"

        android:text="No tags. Tap + above to create a new tag."
        android:textColor="@color/light_grey_2"
        android:textSize="16sp"
        android:textStyle="bold">
    </TextView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tagsHolderRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"

        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_below="@id/noTagsMessageTV"/>


</RelativeLayout>