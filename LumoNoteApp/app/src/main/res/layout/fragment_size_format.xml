<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".ui.noteview.view.notecontentinput.StyleFormatFragment"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clickable="true"

    android:background="@drawable/grey_toolbar_left"
    android:paddingStart="16dp"
    android:paddingEnd="3dp"
    android:paddingTop="4.5dp"
    android:paddingBottom="4.5dp"
    >


    <ImageView
        android:id="@+id/normalTextButtonIV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"

        android:src="@drawable/match_case_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/h1ButtonIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/gold" />

    <ImageView
        android:id="@+id/h1ButtonIV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"

        android:src="@drawable/format_h1_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/normalTextButtonIV"
        app:layout_constraintEnd_toStartOf="@id/h2ButtonIV"
        app:tint="@color/light_grey_1"
        tools:layout_editor_absoluteX="16dp"
        />


    <ImageView
        android:id="@+id/h2ButtonIV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"

        android:src="@drawable/format_h2_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/h1ButtonIV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:tint="@color/light_grey_1" />

</androidx.constraintlayout.widget.ConstraintLayout>

