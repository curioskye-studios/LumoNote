<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black"
    android:orientation="vertical"
    android:clickable="true"

    android:id="@+id/notePreviewViewRL"

    tools:context=".ui.home.notepreview.view.NotePreviewViewFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsTopBarCL"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/black"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"

        tools:layout_editor_absoluteX="24dp">

        <TextView
            android:id="@+id/settingsTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:fontFamily="@font/inter"
            android:text="Settings"
            android:textColor="@color/light_grey_1"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/noteCreationSectionRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"

        android:layout_below="@id/settingsTopBarCL">



        <RelativeLayout
            android:id="@+id/noteCreationLabelRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:paddingStart="24dp"
            android:paddingTop="20dp"
            android:paddingEnd="24dp"
            android:paddingBottom="20dp"

            android:fontFamily="@font/inter"

            android:textColor="@color/light_grey_1"
            android:textSize="20dp"

            android:background="@drawable/calendar_background"
            >

            <TextView
                android:id="@+id/noteCreationLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/inter"
                android:layout_alignParentTop="true"
                android:text="Note Preferences"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="18sp"
                >
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/noteCreationLabelTV">

                <TextView
                    android:id="@+id/noteCreationDescTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/inter"
                    android:layout_marginBottom="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:text="Automatically discard empty notes"
                    android:textColor="@color/light_grey_2"
                    android:layout_toLeftOf="@id/noteCreationSwitchSM"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    >
                </TextView>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/noteCreationSwitchSM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    app:thumbTint="@color/gold"
                    app:trackTint="@color/light_grey_3"

                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/calendarSectionRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"

        android:layout_below="@id/noteCreationSectionRL">



        <RelativeLayout
            android:id="@+id/calendarSectionLabelRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:paddingStart="24dp"
            android:paddingTop="20dp"
            android:paddingEnd="24dp"
            android:paddingBottom="20dp"

            android:fontFamily="@font/inter"

            android:textColor="@color/light_grey_1"
            android:textSize="20dp"

            android:background="@drawable/calendar_background"
            >

            <TextView
                android:id="@+id/calendarSectionLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/inter"
                android:layout_alignParentTop="true"
                android:text="Calendar Preferences"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="18sp"
                >
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendarSectionLabelTV">

                <TextView
                    android:id="@+id/calendarSectionDescTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/inter"
                    android:layout_marginBottom="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:text="Start weekday on Monday"
                    android:textColor="@color/light_grey_2"
                    android:layout_toLeftOf="@id/calendarSectionSwitchSM"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    >
                </TextView>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/calendarSectionSwitchSM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    app:thumbTint="@color/gold"
                    app:trackTint="@color/light_grey_3"

                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/creatorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/inter"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Developed By CurioSkye Studios"
        android:textColor="@color/light_grey_3"
        android:textStyle="bold"
        android:textSize="20dp"
        >
    </TextView>


</RelativeLayout>