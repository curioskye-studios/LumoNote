<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:clickable="true"

    tools:context=".ui.noteview.view.taginput.TagInputFragment">

    <RelativeLayout
        android:id="@+id/tagSectionLabelRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tagLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter"

            android:paddingTop="3dp"
            android:text="Tags:"
            android:textColor="@color/light_grey_3"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <ImageView
            android:id="@+id/addTagButtonIV"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"

            android:paddingBottom="12dp"
            android:src="@drawable/new_label_24px"
            app:tint="@color/gold" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tagDisplayHolderRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"

        android:paddingEnd="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"

        android:scrollbars="none"

        android:layout_below="@id/tagSectionLabelRL" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tagSelectorHolderRV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clipToPadding="false"

        android:paddingEnd="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"

        android:scrollbars="none"

        android:layout_below="@id/tagDisplayHolderRV" />

</RelativeLayout>